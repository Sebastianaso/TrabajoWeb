<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="styles.css">
  
    
 
  <title>Restaurante</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }
    header {
      background-color: #f44336;
      color: white;
      padding: 20px;
      text-align: center;
    }
    nav {
      background-color: #333;
      color: white;
      text-align: center;
      padding: 10px;
    }
    nav a {
      color: white;
      text-decoration: none;
      padding: 10px;
    }
    nav a:hover {
      background-color: #555;
    }
    section {
      padding: 20px;
    }
    footer {
      background-color: #333;
      color: white;
      text-align: center;
      padding: 10px;
      position: fixed;
      bottom: 0;
      width: 100%;
    }
  </style>
</head>
<body>
  <header>
    <h1>Restaurante</h1>
  </header>
  <nav>
    <a href="#menu">Menú</a>
    <a href="#realizarPedidos">Pedidos</a>
    <a href="#contacto">Contactos</a>
  </nav>

  <section class="Menú" id="menu">
    <h2>Menú</h2>
    <form action="/menu.ejs" method="GET">
      <a href="menu.ejs"><button>Ir a ver menu</button></a>
    </form>
    
      
  <!-- Agregar un formulario para ingresar pedidos -->
<section class="Pedidos" id="realizarPedidos">
  <h2>Realizar Pedido</h2>
  <form id="orderForm">
    <h1>Seleccione un plato</h1>

    <label for="opciones">Menu:</label>
    <select id="opciones" name="opciones">
        <option value="opcion1">Arroz c/ pollo y papas fritas</option>
        <option value="opcion2">Lomo a lo pobre</option>
        <option value="opcion3">Pescado c/ arroz blanco/Chaufa</option>
        
    </select>

    <br><br>

    <button onclick="obtenerSeleccion()">Obtener Selección</button>

    <p id="seleccion"></p>
    <script>
      function obtenerSeleccion() {
          // Obtener el elemento select
          var select = document.getElementById("opciones");
          // Obtener el índice de la opción seleccionada
          var indiceSeleccionado = select.selectedIndex;
          // Obtener el valor de la opción seleccionada
          var valorSeleccionado = select.options[indiceSeleccionado].value;
          // Obtener el texto de la opción seleccionada
          var textoSeleccionado = select.options[indiceSeleccionado].text;
          // Mostrar la selección en el párrafo con id "seleccion"
          document.getElementById("seleccion").innerHTML = "Seleccionaste: " + textoSeleccionado + " (valor: " + valorSeleccionado + ")";
      }
  </script>


    <label for="tableNumber">Número de Mesa:</label>
    <input type="number" id="tableNumber" name="tableNumber" required>
    <br>
    <label for="items">Elementos del Pedido:</label>
    <textarea id="items" name="items" rows="4" required></textarea>
    <!-- Podrías agregar más campos según tus necesidades -->
    <button type="submit">Enviar Pedido</button>
  </form>
</section>

<!-- Página de confirmación de pedido -->
<section class="Confirmación" id="confirmación" style="display: none;">
  <h2>Confirmación de Pedido</h2>
  <p id="confirmationMessage"></p>
</section>



<section class="Contacto" id="contacto">
  <h2>Contacto</h2>
  <p>Aquí van los detalles de contacto del restaurante...</p>
</section>
</body>
</html>



